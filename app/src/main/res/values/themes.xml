<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SharerMonkeys" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/fair_grey</item>
        <item name="android:actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>

    <style name="Theme.SharerMonkeys" parent="Base.Theme.SharerMonkeys" />

    <style name="Theme.SharerMonkeys.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SharerMonkeys.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SharerMonkeys.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Estilo para los puntos de desbordamiento del menu -->
    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/share</item>
    </style>

</resources>